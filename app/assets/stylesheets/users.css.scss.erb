p.notice {
  color: #895F00;
  text-shadow: 0 1px 0 white;
  font-weight: bold;
  font-size: 1.3em;
  position: relative;
  width: 90%;
  padding: 10px;
  margin: 20px auto 0 auto;
  background: #f6f5d3;
  background: -webkit-gradient(linear, left bottom, left top, from(#F6F5D3), to(#FDFBE8));
  background: -moz-linear-gradient(90deg, #F6F5D3 0%, #FDFBE8 100%);
  -webkit-box-shadow: inset 0 0 0 1px #FFF;
  -moz-box-shadow: inset 0 0 0 1px #FFF;
  box-shadow: inset 0 0 0 1px #FFF;
  border: 1px solid #E8DFAD;
  border-bottom: 1px solid #D6CA85;
  -webkit-border-radius: 5px;
  -moz-border-radius: 5px;
  border-radius: 5px;

  a#close_notice {
    position: absolute;
    top: 10px;
    right: 10px;
    display: block;
    width: 16px;
    height: 16px;
    background: url(<%= asset_path "close_notice.png" %>);
    text-indent: -9999999px;
    color: #895F00;
  }
}

.form-header {
  font-family: myriad-pro, sans-serif;
  padding: 20px 0;
  font-size: 4.75em !important;
  font-weight: 300;
  text-align: center;
  color: #818181;
  background: url(<%= asset_path "shadow-down.png" %>) no-repeat bottom center;
  margin-bottom: 0.75em !important;
}

.form-wrapper {
  &.signin {
    color: #818181;
    text-align: center;
    padding: 20px 25px;
    margin-bottom: 20px !important;
    font-size: 1.8em;
  }

  padding: 0 !important;
  background: #f5f5f5;
  background: -webkit-gradient(linear,center top,center bottom,from(white),to(whiteSmoke));
  background: -moz-linear-gradient(top,white,whiteSmoke);
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ffffffff',endColorstr='#fff5f5f5',GradientType=0);
 
  .form-inner {
    padding: 20px 45px 7px;
  }

  .form-notice {
    display: block;
    margin-top: 12px;
  }

 .actions {
   border-top: 1px solid #dfdfdf;
   border-bottom-right-radius: 8px;
   -moz-border-radius-bottomright: 8px;
   -webkit-border-bottom-right-radius: 8px;
   border-bottom-left-radius: 8px;
   -moz-border-radius-bottomleft: 8px;
   -webkit-border-bottom-left-radius: 8px;
   background: #f5f5f5;
   background: -webkit-gradient(linear,center top,center bottom,from(white),to(whiteSmoke));
   background: -moz-linear-gradient(top,white,whiteSmoke);
   filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ffffffff',endColorstr='#fff5f5f5',GradientType=0);
  } 
}
