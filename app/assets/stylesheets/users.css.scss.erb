@import "partials/lawyer/lawyer";
@import "partials/attorneys/appointment_form";
body.users.home {
  
  form.filters {
    float:left;
    width: 100px;
  }

  div.lawyer, div.offering{
    @include lawyer;
  }

  div.appointment-form {
    @include appointment_form
  }
  
}

#container .notice.with-avatar {
  padding: 5px 15px !important;

  .text {
    width: 89%;
  }
}

#container .notice {
  font-size: 1.4em;
  color: #333;
  width: 48% !important;
  padding: 10px 15px !important;
  text-align: left;
  margin: 20px auto;
  background-color: #f2fafc;
  border: 1px #d3e1e1 solid;
  position: relative;
  border-radius: 6px;

  .avatar, .text {
    display: inline-block;
    display: -moz-inline-stack;
    *display: inline;
    vertical-align: middle;
    zoom: 1;
  }

  .avatar {
    width: 40px;
    margin-right: 1.4em;
  }

  .text {
    position: relative;
    width: 99.4%;
  }

  a#close_notice {
    position: absolute;
    top: -1px;
    border: 0;
    right: 0;
    display: block;
    width: 20px;
    height: 20px;
    background: url(<%= asset_path "close_notice.png" %>);
    text-indent: -9999999px;
  }
}

.form-header {
  font-family: myriad-pro, sans-serif;
  padding: 20px 0;
  font-size: 4.75em !important;
  font-weight: 300;
  text-align: center;
  color: #818181;
  background: url(<%= asset_path "shadow-down.png" %>) no-repeat bottom center;
  margin-bottom: 0.75em !important;
}

.form-wrapper {
  &.signin {
    color: #818181;
    text-align: center;
    padding: 20px 25px;
    margin-bottom: 20px !important;
    font-size: 1.8em;
  }

  padding: 0 !important;
  background: #f5f5f5;
  background: -webkit-gradient(linear,center top,center bottom,from(white),to(whiteSmoke));
  background: -moz-linear-gradient(top,white,whiteSmoke);
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ffffffff',endColorstr='#fff5f5f5',GradientType=0);
 
  .form-inner {
    padding: 20px 45px 7px;
    display: inline-block;
    width: 325px;
    #submit_login{
      float: left;
      display: block;
    }
    p{
      float: right;
    }
  }
  
  .form-notice {
    display: block;
    margin-top: 12px;
  }

 .actions {
   border-top: 1px solid #dfdfdf;
   border-bottom-right-radius: 8px;
   -moz-border-radius-bottomright: 8px;
   -webkit-border-bottom-right-radius: 8px;
   border-bottom-left-radius: 8px;
   -moz-border-radius-bottomleft: 8px;
   -webkit-border-bottom-left-radius: 8px;
   background: #f5f5f5;
   background: -webkit-gradient(linear,center top,center bottom,from(white),to(whiteSmoke));
   background: -moz-linear-gradient(top,white,whiteSmoke);
   filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ffffffff',endColorstr='#fff5f5f5',GradientType=0);
  } 
}

form.filters {
  ul.practice-areas {
    ul.children {
      padding-left: 15px;
    }
  }
}

.user_rate {
  margin-bottom: 10px !important;
  display: block;
  position: relative;

  .rate_hint {
    position: absolute;
    right: 0;
    top: 0.6em;
  }

  label.message {
    display: block !important;
    margin-bottom: 1.0833em;
    margin-left: 2px;
  }

  input#lawyer_rate {
    margin-bottom: 2px !important;
  }
}

.user_free_consultation_duration {
  position: relative;
  display: block;

  .duration_hint {
    float: right;
    margin-right: 25px;
    padding-top: 8px;
    font-size: 1.5em;
    color: #371C1C;
    right: 4.1667em;
    top: 0.2em;
  }
  #lawyer_free_consultation_duration{
    background: url(select_bg_offer.png) no-repeat;
    width: 144px;
    height: 28px;
    font-size: 13px;
    padding: 5px 5px 5px 10px;
    margin-top: 4px;
    color: #404040;
    border: 0;
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    overflow: hidden; 
  }
}

body.users.home {
  div.load-more {
    background:#f6f6f6;
    border:1px solid #d0d2d5;
    float: left;
    width:722px;
    padding: 10px 0;
    margin-top: 15px;
    background: #f6f6f6; /* Old browsers */
    background: -moz-linear-gradient(top,  #f6f6f6 0%, #e8e8e8 100%); /* FF3.6+ */
    background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#f6f6f6), color-stop(100%,#e8e8e8)); /* Chrome,Safari4+ */
    background: -webkit-linear-gradient(top,  #f6f6f6 0%,#e8e8e8 100%); /* Chrome10+,Safari5.1+ */
    background: -o-linear-gradient(top,  #f6f6f6 0%,#e8e8e8 100%); /* Opera 11.10+ */
    background: -ms-linear-gradient(top,  #f6f6f6 0%,#e8e8e8 100%); /* IE10+ */
    background: linear-gradient(to bottom,  #f6f6f6 0%,#e8e8e8 100%); /* W3C */
    filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#f6f6f6', endColorstr='#e8e8e8',GradientType=0 ); /* IE6-9 */
    -moz-border-radius: 5px;
    -webkit-border-radius: 5px;
    border-radius: 5px;
    a {
      border: 0px;
      color:#4c4c4c;
      font-size: 16px;
      display: block;
      text-align: center;
    }
  }
}
