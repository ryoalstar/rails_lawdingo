%p
  %a.practice_area_name{:href => "/lawyers/Legal-Advice/All-States/#{area.name_for_url}", 'data-practice-area' => area.name_for_url }= area.name
- if area.specialities.any?
  %ul
    - lawyer.practice_areas.child_practice_areas.where(parent_id: area.id).order("name").each do |spec|
      %li
        %a.practice_area_name{:href => "/lawyers/Legal-Advice/All-States/#{spec.name_for_url}", 'data-practice-area' => spec.name_for_url}= spec.name
