<div class="signup" id="page">
       <h1>Sign In</h1>
            <h3>Lawyers, <%= link_to 'apply', new_user_path(:ut=>1) %>. New members, <%= link_to 'sign up', new_user_path %>.</h3>
<div>
<%= form_tag sessions_path do %>
  <% if @msg %>
    <div class="error_explanation">
      <h4 class="error">You have entered incorrect login credintial.</h4>
    </div>
  <% end %>
  <%= text_field_tag :email ,nil ,:placeholder=>"Email address" ,:class=>"email" %>
  <%= password_field_tag :password ,nil ,:placeholder=>"Password" ,:class=>"passw" %>
  <%= submit_tag 'Login' ,:class=>"button" %>
<% end %>
</div>
</div>

