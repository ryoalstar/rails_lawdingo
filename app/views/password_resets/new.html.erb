<% content_for(:title) do %>
  Reset Password - Lawdingo: Ask a Lawyer Online Now
<% end %>

<div id="page" class="signup">
  <h1 class="form-header">Reset Password</h1>
  <div class="form-inner">
  <%= form_tag password_resets_path, :method => :post do %>
    <div>
      <%= text_field_tag :email, params[:email],{:placeholder=>"Email",:class=>"name"} %>
    </div>
    <div><%= submit_tag "Reset Password", :class=>"button" %></div>
  <% end %>
  </div>
</div>
