<div class="contact_wrapper">
<p class="contact_notice info"></p>
<p class="contact_notice error"></p>
<div class="contact_stay">
	<p class="contact_title">Stay in touch!</p>
	<div class="contact_info_panel">
		<div class="contact_email">
			info@lawdingo.com
		</div>
		<div class="contact_label">
			Please email us
		</div>
		
		<div class="contact_phone">
			415-234-3464
		</div>
		<div class="contact_label">
			give us a call
		</div>
	</div>
	<div class="contact_followus">
		Follow us on:
		<div class="contact_social">
			<%= link_to 'https://www.facebook.com/TheLawdingo', :rel => :nofollow do %>
				<div class="contact_fb">
				</div>
			<% end %>
			<%= link_to 'https://twitter.com/thelawdingo', :rel => :nofollow do %>
				<div class="contact_tw">
				</div>
			<%end%>
			<%= link_to 'http://www.linkedin.com/company/lawdingo', :rel => :nofollow do %>
				<div class="contact_linkedin">
				</div>
			<%end%>
		</div>
	</div>
	
</div>
<div class="contact_or">
</div>
<div class="contact_fields">
	<%= form_tag send_email_path, :method=>:post, :remote=>true do %>
	<div class="contact_field_wrapper">
		<%= text_field_tag :name, nil, :placeholder=>'Your Name'%>
	</div>
	<div class="contact_field_wrapper">
		<%= email_field_tag :email, nil, :placeholder=>'Your Email'%>
	</div>
	<div class="contact_field_wrapper">
		<%= text_area_tag :message, nil, :placeholder=>'Your Message'%>
	</div>
	<div class="contact_button_wrapper">
		<%= submit_tag 'Send Message', :class=>'button' %>
	</div>
	<%end%>
</div>
</div>
