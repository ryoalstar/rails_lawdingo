
<%
detail  = user.detail
photo_url = user.photo.url(:medium)
tab       = tab == User::SESSION_TAB ? tab : User::ACCOUNT_TAB
txt_color = ['black','blue']
%>

<div>
  <div class="header_mb">
    <span>
      <%= link_to "Account information", user_path(user), :style =>"color:#{txt_color[ tab == User::ACCOUNT_TAB ? 0 : 1]};text-decoration:none;" %>
    </span>|
    <span>
      <%= link_to "Summary of sessions", user_path(user, :t =>User::SESSION_TAB), :style =>"color:#{txt_color[ tab == User::SESSION_TAB ? 0 : 1]};text-decoration:none;" %>
    </span>
  </div>
</div>
<div>
  <div class="desc">
    <% if tab == User::ACCOUNT_TAB %>
      <%= render :partial =>"/users/account_info", :locals => {:user => user} %>
    <% elsif tab == User::SESSION_TAB %>
      <%= render :template =>"/conversations/index" %>
    <% end %>
  </div>
</div>

<% if false %>
  <div style="width: 30%;margin-right: 10px;margin-top: 20px;float: left;">
    <div class="header_mb">
      <% if is_self_login?(user.id) or is_admin_login? %>
        <span style="float:right;">
          <%= link_to "Edit", edit_user_path(user.id), :title =>"Edit Account"  %>
        </span>
      <% end %>
    </div>
    <div class="desc">
      <%= image_tag photo_url %><br/>
      <% if is_self_login?(user.id) or is_admin_login? %>
        <%= render :partial =>"/users/upload_image", :locals =>{:user =>user} %>
      <% end %>
    </div>
  </div>
<% end %>

