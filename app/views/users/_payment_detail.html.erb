
<div style="margin:10px auto 30px 40px;"> 1. Create account &nbsp;&nbsp;<b> 2. Enter payment info</b> </div>

<%= javascript_include_tag "https://js.stripe.com/v1/", "payment" %>
<div id="stripe_errors"></div>
<%= form_for @card_detail, :url => {:action => 'payment_info'}, :html => {:id => 'payment-form'}  do |f| %>

  <%= hidden_field_tag :stripe_card_token %>
  <div class="f_label"></div>
  <%= f.text_field :first_name %><br/>

  <div class="f_label"></div>
  <%=f.text_field :last_name %><br/>

  <div class="f_label"></div>
  <%=f.text_field :street_address %><br/>

  <div class="f_label"></div>
  <%=f.text_field :city %><br/>

  <div class="f_label"></div>
  <%=f.country_select :country %><br/>

  <div class="f_label"></div>
  <%=f.text_field :postal_code %><br/>

  <br/>
  <div class="f_label"></div>
  Select Your Card Type<br/>
  <div class="f_label"></div>
  <%= f.select :card_type, [["Visa", "visa"], ["MasterCard", "master"], ["Discover", "discover"], ["American Express", "american_express"]] %><br/>

  <div class="f_label"></div>
  <%= f.text_field :card_number %><br/>

  <div class="f_label"></div>
  <%= f.text_field :card_verification %><br/>

  <div class="f_label"></div>
  Card Expiration<br/>
  <div class="f_label"></div>
  <%= select_month nil, {add_month_numbers: true}, {name: "card_detail[expire_month]", id: "card_month"} %>
  <%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+15}, {name: "card_detail[expire_year]", id: "card_year"} %>  <br/>


  <div >
    <noscript>JavaScript is not enabled and is required for this form. First enable it in your web browser settings.</noscript>
  </div>
  <br/>
  <div class="f_label"></div>
  <button type="submit" class="submit-button">Complete Registration</button>

  &nbsp;&nbsp;<%= link_to 'Skip payment info for now', users_path %>
<% end %>

