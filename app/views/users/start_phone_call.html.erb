<div id="page" class="signup">
  <p class="notice">To start the consultation, enter your phone number. In a minute, if <%= @lawyer.first_name %> is available, you'll get a call and be connected.</p>

  <div>
  <%= form_tag create_call_path(lawyer_id: params[:id]), id: "phone_input_form" do %>
    <span class="phone-label">Your phone number:</span><br/>
    <input type="text" id="client_number" value="<%= current_user.phone || params[:number] %>" name="client_number" />
    <%= submit_tag "Continue", class: "button" %>
  <% end %>
  </div>
</div>

