<%= javascript_tag do %>
$(document).ready(function(){
var playerVersion = swfobject.getFlashPlayerVersion(); // returns a JavaScript object
        if(playerVersion.major < 10 || (playerVersion.major == 10 && playerVersion.minor < 3))
        {
            var output = "<p>You have Flash player " + playerVersion.major + "." + playerVersion.minor + "." + playerVersion.release + " installed. To use Lawdingo you'll just need to upgrade to Flash 11. It's free and easy</p>";
          $('#flash_message').html(output);
          $('#flash_message').css('margin-top', '10%');
        }
      });
<% end %>

