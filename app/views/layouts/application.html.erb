<!DOCTYPE html>
<html>
    <head>
      <title>Lawdingo - Legal advice over video chat.</title>
      <%= stylesheet_link_tag    "application" %>
      <%= javascript_include_tag "application" %>
      <%= javascript_include_tag 'site'%>
      <%= csrf_meta_tags %>
      <%= tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY %>
      <% if ENV['RAILS_ENV'] == 'production' %>
        <script type="text/javascript">
           var _gaq = _gaq || [];
           _gaq.push(['_setAccount', 'UA-3494749-4']);
           _gaq.push(['_trackPageview']);

           (function() {
              var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
              ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
              var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
           })();
        </script>
      <% end %>
    </head>
    <body id="lawdingo" onload="">

        <!-- HEADER -->

        <div id="header">
            <div>
                <div class="links">
                  <% if logged_in?
                    user = current_user
                    full_name = user.full_name
                  %>
                    Logged in as<%= link_to full_name, user_path(user.id), :title =>'Account Profile!' %>
                    | <%= link_to "Logout", logout_path, :title =>'Logout from the app!' %>
                  <% else %>
                    <%= link_to "Log In", login_path  %> <%= link_to "Sign Up", new_user_path %>
                    Lawyers: <%= link_to "Apply Here", new_user_path(:ut=>1) %>
                  <% end %>
                </div>
                <% if current_user && current_user.is_lawyer? %>
                  <%= link_to image_tag("logo.png", :alt => 'Lawdingo'), user_path(current_user, :t=>'l'), :title=>'Home', :class => 'home-link' %>
                <% else %>
                  <%= link_to image_tag("logo.png", :alt => 'Lawdingo'), root_path, :title=>'Home', :class => 'home-link' %>
                <% end %>
                <%#= AppParameter.service_homepage_tagline %>
            </div>
        </div>
        <!-- END HEADER -->

        <!-- CONTENT -->
        <div id="container">
        <% if flash[:notice] %>
          <!--div class="notice">
            <%= flash[:notice].html_safe %>
          </div-->
        <% end %>
       <%= yield %>
</div>
        <!-- END CONTENT -->
    <% if user and user.user_type == 'LAWYER' %>

<div id="outer_div" style="top:9%;position:absolute;width:960px;height:800px;left:-2000px;">
<!--div style="border:solid 1px #b8b8b8; background-color: #efefef;margin:0 auto;width:960px;"-->
<div style="margin:0 auto;width:960px;height:410px;">
<strong><a href="javascript:if(confirm('Are you sure?')){closecall();};" >Close</a></strong>
<div id="flash_div">

	            <object id='myswf' classid='clsid:D27CDB6E-AE6D-11cf-96B8-444553540000' height='410' width='960'>
	              <param name="wmode" value="transparent"/>
	              <param name='src' value='/swf/chhat.swf'/>
	              <param name='FlashVars' value="user_id=<%= user.id %>&user=<%= full_name %>&uemail=<%= user.email %>&lawyer_id=<%= user.id %>&lawyer=<%= full_name %>&lemail=<%= user.email %>&hosturl=<%= request.env['HTTP_HOST'] %>&imgsrc=/images/phone.jpg&lrate=<%= user.rate %>&crate=<%= AppParameter.service_charge_value %>"/>
	              <param name="allowScriptAccess" value="always" />
	              <embed name='mySwf' src='/swf/chhat.swf' allowScriptAccess='always' height='410' width='960' FlashVars="user_id=<%= user.id %>&user=<%= full_name %>&uemail=<%= user.email %>&lawyer_id=<%= user.id %>&lawyer=<%= full_name %>&lemail=<%= user.email %>&hosturl=<%= request.env['HTTP_HOST'] %>&imgsrc=/images/phone.jpg&lrate=<%= user.rate %>&crate=<%= AppParameter.service_charge_value %>" wmode="transparent" ></embed>
	            </object>
	          </div>
          </div>
          </div>
      <% end %>

        <!-- FOOTER -->
        <div id="footer">
            <div>
                <ul class="links">
                    <li><%= link_to "About", about_page_path %></li>
                    <li><%= link_to "Contact", "mailto:sup@lawdingo.com" %></li>
                    <li><%= link_to "Blog", "http://lawdingo.wordpress.com", :target =>'_blank' %></li>
                    <li><%= link_to "Terms & Privacy", terms_page_path, :target=>'_blank' %></li>
                </ul>
                <div id="copyright">&copy; Lawdingo</div>
            </div>
        </div>
        <!-- END FOOTER -->
        <div id="dialog-overlay"></div>
        <div id="schedule_session" class="dialog-window">
            <h3 id='overlay_user_name'></h3>
            I’m currently away or in a Lawdingo consultation. Please describe what you’d like to talk about and I’ll get back to you as soon as I can.
            <textarea id='txt_msg' name ='txt_msg'></textarea>
            <span class="fine-print">Please do not include any private or confidential information here.</span>
            <hr>
            <a href="javascript:void(0)" class="button blue" onclick="sendMessage();return false;">Send Message</a>
        </div>

    </body>
</html>

